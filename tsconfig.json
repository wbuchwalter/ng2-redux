{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "rootDir": "src",
    "outDir": "lib/",
    "noImplicitAny": false,
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "lib",
    "examples",
    "tmp",
    "typings/browser",
    "typings/browser.d.ts"
  ]
}
